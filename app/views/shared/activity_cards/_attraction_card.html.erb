<% attraction = recommendation %>
<div class='selected-card'>
  <%= link_to details_path(attraction, from: params[:from], type: type) do %>
    <div class="card-photo">
      <%= image_tag "#{attraction.activity.img}", class:'img-thumbnail'%>
    </div>


   <div class="card-info">
    <div class="card-info-a">
      <div class='fill'>
        <%= image_tag "coaster_black.png", alt: "Fareswheel"%>
      </div>
      <div class="info-text">

        <%= attraction.activity.name.truncate(16) %>

      </div>
    </div>
      <%= render 'shared/activity_cards/like_button', recommendation: attraction , type: type %>
    </div>

  <% end %>
</div>
