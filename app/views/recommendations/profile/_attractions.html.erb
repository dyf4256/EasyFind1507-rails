<div class='text-success'>
  <p class='mb-0 mt-2 ms-2 fw-bolder fs-4'>Attractions</p>
  <div class='history-by-category'>
    <% attractions.each do |attraction| %>
      <%= link_to details_path(attraction) do %>
        <div class='selected-card'>
          <%= image_tag "#{attraction.activity.img}", class:'img-thumbnail'%>
          <%= attraction.activity.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
