<div class='text-primary'>
  <p class='mb-0 mt-2 ms-2 fw-bolder fs-4'>Events</p>
  <div class='history-by-category'>
    <% events.each do |event| %>
      <%= link_to details_path(event) do %>
        <div class='selected-card m-2 d-flex flex-column text-center'>
          <%= image_tag 'selected1.png', height:100 %>
          <%= event.activity.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
